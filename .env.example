# PlexPosterSync Configuration

# Plex server connection details
PLEX_BASE_URL=http://your-plex-server:32400
PLEX_TOKEN=XXXXXX

# Poster storage directories (absolute paths required)
# Windows paths with spaces work fine without quotes
MOVIES_POSTER_DIR=Z:\Plex_Poster\Movies
SERIES_POSTER_DIR=Z:\Plex_Poster\TV Shows

# For Linux/macOS paths with spaces, no quotes needed in .env file
# MOVIES_POSTER_DIR=/media/data/Plex Poster/Movies
# SERIES_POSTER_DIR=/media/data/Plex Poster/TV Shows

# Plex library names (spaces are allowed)
MOVIES_LIBRARY=Movies
SERIES_LIBRARY=TV Shows

# Image quality settings
JPEG_QUALITY=85

# TMDb integration (for better media matching)
USE_TMDB=True
TMDB_API_KEY=XXXXXX